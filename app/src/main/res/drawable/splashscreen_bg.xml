<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:opacity="opaque">

    <item>
        <shape>
            <solid android:color="@color/white"/>
        </shape>
    </item>

    <item android:bottom="150dp">
        <bitmap android:src="@drawable/splashscreen_logo"
            android:tint="@color/PeriwinkleGray"
            android:gravity="center"/>
    </item>

    <item android:top="150dp">
        <bitmap android:src="@drawable/splash_text_encrypted_cloud"
            android:tint="@color/Casper"
            android:gravity="center"/>
    </item>

</layer-list>